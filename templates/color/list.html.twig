{% extends 'base.html.twig' %}
{% block title %}Liste des couleurs{% endblock %}


{% block body %}

    <h1>Liste des couleurs:</h1>
    <div id="modal">
      <div>t'es sûr de vouloir faire ça ?</div>
      <div>
        <button class="btn btn-sm btn-success">oui</button>
        <button class="btn btn-sm btn-warning">Annuler</button>
      </div>
    </div>
    <div class="container">
    <table class="table table-striped table-bordered">
      <thead class="bg-dark" style="color:white;">
        <tr>
          <th>id</th>
          <th> Nom en Francais </th>
          <th> Nom en English </th>
          <th> Valeur hexadécimal </th>
          <th> Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for color in colors %}
        <tr>
          <td>{{color.id}}</td>
          <td>{{color.nameFr}}</td>
          <td>{{color.nameEn}}</td>

          <td >{{color.hexa}}</td>
          <td>
            <a href="/color/{{color.id}}/edit" class="btn btn-sm btn-warning">Edit</a>&nbsp;
            <a href="/color/{{color.id}}/delete" class="btn btn-sm btn-danger">Suppr</a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
    </div>
    {% endblock %}

    {% block js %}
    <script src="/js/app.js"></script>
    {% endblock %}
