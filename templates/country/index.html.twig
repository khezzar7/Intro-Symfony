{% extends 'base.html.twig' %}



{% block body %}
<a class="btn btn-sm btn-primary"href="{{path('country_add')}}">Ajouter un pays</a>

<table class="table table-striped table-bordered">
  {% for country in countries %}
  <tr>
    <td>{{country.id}}</td>
    <td>{{country.name}} {% if country.capital %}({{country.capital.name}}){% endif %}</td>
    <td><a href="{{path('country_delete', {'id': country.id})}}"class="btn btn-sm btn-danger">Suppr</button></td>
    <td><a href="{{path('country_edit', {'id': country.id})}}"class="btn btn-sm btn-warning">Edit</button></td>

  </tr>
  {% endfor %}
</table>
{% endblock %}
