{% extends 'base.html.twig' %}



{% block body %}
<a class="btn btn-primary" href="{{path('proverb_add')}}">Ajouter un proverbe</a>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Proverbe</th>
      <th>Pays</th>
      <th>Topics</th>
      <th>Popularity</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr>

    {% for proverb in proverbs %}
    <td>{{proverb.body}}</td>
    <td>{{proverb.country.name}}</td>
    <td>
    {% for topic in proverb.topic %}
      {{topic.name}}
    {% endfor %}
    </td>
    <td>{{proverb.popularity}}</td>
    <td><a href="{{path('proverb_delete', {'id': proverb.id})}}"class="btn btn-sm btn-danger">Supprimer</a></td>

  </tr>
  </tbody>
  {% endfor %}
</table>
{% endblock %}
